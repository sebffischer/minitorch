    {
        "name": "Python: Current as Module",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "cwd": "${workspaceRoot}",
        "env": {"PYTHONPATH": "${workspaceRoot}"},
        "console": "integratedTerminal", 
        "justMyCode": false, 
    }, 
    {
        "name": "Python: Current as Module from here",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}", 
        "env": {"PYTHONPATH": "${workspaceRoot}"},
        "console": "integratedTerminal", 
        "justMyCode": false, 
    }
    ]
